<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zachschulze.healthtracker20.ui.activities.AddMealItemActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mealName"
        android:layout_marginTop="34dp"
        android:background="#ffd3d3d3"
        android:hint="Enter Meal Name"
        android:editable="true"
        android:padding="5dp"
        android:inputType="textCapSentences"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/calories"
        android:hint="Enter Calories"
        android:background="#D3D3D3"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mealName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/numServings"
        android:background="#D3D3D3"
        android:hint="Enter Number of Servings"
        android:editable="true"
        android:padding="5dp"
        android:inputType="number"
        android:layout_below="@+id/foodItems"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@+id/numServings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodItems"
        android:background="#D3D3D3"
        android:layout_below="@+id/calories"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:touchscreenBlocksFocus="false" />
</RelativeLayout>
