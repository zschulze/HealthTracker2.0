<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zachschulze.healthtracker20.ui.activities.AddFoodItemActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/foodName"
        android:layout_marginTop="34dp"
        android:background="#ffd3d3d3"
        android:hint="Enter Food Name"
        android:editable="true"
        android:padding="5dp"
        android:inputType="textCapSentences"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/calories"
        android:hint="Enter Calories"
        android:background="#D3D3D3"
        android:padding="5dp"
        android:layout_below="@+id/foodName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/servingSize"
        android:hint="Enter Serving Size"
        android:background="#D3D3D3"
        android:padding="5dp"
        android:layout_below="@+id/calories"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/servingUnit"
        android:background="#D3D3D3"
        android:hint="Enter Serving Unit"
        android:editable="true"
        android:padding="5dp"
        android:inputType="textCapSentences"
        android:layout_below="@+id/servingSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitFoodItem"
        android:layout_below="@+id/servingUnit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
